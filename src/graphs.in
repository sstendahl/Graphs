"""Main graphs module."""

import gettext
import locale
import logging
import os
import signal
import sys

VERSION = "@VERSION@"
PROJECT_NAME = "@PROJECT_NAME@"
PKGDATADIR = "@PKGDATADIR@"
LOCALEDIR = "@LOCALEDIR@"
COPYRIGHT = "@COPYRIGHT@"
APPID = "@APPLICATION_ID@"
NAME = "@NAME@"
WEBSITE = "@HOMEPAGE_URL@"
ISSUES = "@ISSUES@"
AUTHOR = "@AUTHOR@"

sys.path.insert(1, PKGDATADIR)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain(PROJECT_NAME, LOCALEDIR)
locale.textdomain(PROJECT_NAME)
gettext.bindtextdomain(PROJECT_NAME, LOCALEDIR)
gettext.textdomain(PROJECT_NAME)

if __name__ == "__main__":
    import gi

    gi.require_version("Adw", "1")
    gi.require_version("Gtk", "4.0")

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(PKGDATADIR, "@APPLICATION_ID@.gresource"))
    resource._register()

    format = "%(levelname)s: %(message)s"
    logging.basicConfig(format=format, level=logging.@LOG_LEVEL@)

    args = [VERSION, APPID, NAME, COPYRIGHT, WEBSITE, ISSUES, AUTHOR, PKGDATADIR]

    from graphs import main
    sys.exit(main.main(args))
